{
  "name": "land-registry-project",
  "version": "1.0.0",
  "description": "Blockchain-based Land Registry System",
  "private": true,
  "workspaces": [
    "frontend",
    "contracts"
  ],
  "scripts": {
    "install:all": "npm install && npm install --prefix contracts && npm install --prefix frontend",
    "compile": "npm run compile --prefix contracts",
    "test": "npm run test --prefix contracts",
    "deploy:local": "npm run deploy --prefix contracts",
    "dev": "npm run dev --prefix frontend",
    "build": "npm run build --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
